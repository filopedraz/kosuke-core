NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_cHJpbWFyeS1kb25rZXktNDkuY2xlcmsuYWNjb3VudHMuZGV2JA
CLERK_SECRET_KEY=replace-me
# sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/projects
# sign-up
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/projects

# AI Provider
# ------------------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_MODEL=claude-haiku-4-5
ANTHROPIC_API_KEY=replace-me
AGENT_MAX_TURNS=25

# Docker Related
# ------------------------------------------------------------------------------------
HOST_WORKSPACE_DIR=${PWD}

# Github Related
# ------------------------------------------------------------------------------------
TEMPLATE_REPOSITORY=Kosuke-Org/kosuke-template
PREVIEW_DEFAULT_IMAGE=ghcr.io/kosuke-org/kosuke-template:v1.8.0

# GitHub App Authentication
# ------------------------------------------------------------------------------------
NEXT_PUBLIC_GITHUB_WORKSPACE=replace-me
GITHUB_APP_ID=replace-me
GITHUB_APP_INSTALLATION_ID=replace-me
GITHUB_APP_PRIVATE_KEY=replace-me

# Projects & Sessions
# ------------------------------------------------------------------------------------
PROJECTS_BASE_PATH=./projects
SESSION_BRANCH_PREFIX=kosuke/chat-
PROJECTS_DIR=projects

# Domain configuration
# ------------------------------------------------------------------------------------
MAIN_DOMAIN=kosuke.ai
PREVIEW_BASE_DOMAIN=kosuke.app
TRAEFIK_ENABLED=false
PREVIEW_PORT_RANGE_START=3001
PREVIEW_PORT_RANGE_END=3100
PREVIEW_HEALTH_PATH=/
PREVIEW_NETWORK=kosuke_network
PREVIEW_CONTAINER_NAME_PREFIX=kosuke-preview-

# SEO
# ------------------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_INDEXING=true

# S3: storage configuration
# ------------------------------------------------------------------------------------
S3_REGION=fra1
S3_ENDPOINT=https://fra1.digitaloceanspaces.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key

# Feature Flags
# ------------------------------------------------------------------------------------
# Optional integrations (Ghost CMS, Slack, Cloudflare, Sentry, etc.) are only needed
# for production deployments. See .env.prod for the full list of production variables.
CLOUDFLARE_ENABLED=false
SENTRY_ENABLED=false
GHOST_ADMIN_API_KEY_ENABLED=false
SLACK_WEBHOOK_URL_ENABLED=false
NEXT_PUBLIC_COOKIEBOT_ENABLED=false
NEXT_PUBLIC_PLAUSIBLE_ENABLED=false
NEXT_PUBLIC_POSTHOG_ENABLED=false

# Cron configs
# ------------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# Multiple admins (comma-separated)
# ------------------------------------------------------------------------------------
SUPER_ADMIN_EMAILS=admin@example.com

# API Key for Logs
# ------------------------------------------------------------------------------------
KOSUKE_CLI_API_KEY=random
